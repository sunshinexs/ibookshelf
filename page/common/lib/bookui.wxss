/** 
  The style of bookinfo 
**/

.container {
  background-color: #fff;
}

.book-info {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.3s;
}

.book-img {
  max-width: 230rpx;
  max-height: 312rpx;
  margin: 0 50rpx 0 0;
}

.book-title {
  font-size: 40rpx;
  font-family: 微软雅黑;
  padding: 15rpx 0;
}

.book-rating, .book-author, .book-publisher, .book-pubdate, .book-isbn {
  font-size: 26rpx;
  font-family: 微软雅黑;
  color: #7a7e83;
}

.book-btn {
  padding: 10rpx 30rpx;
  font-family: 微软雅黑;
}

.book-btn-hiden {
  display: none;
}

.book-summary, .book-author-intro {
  padding: 30rpx;
  font-size: 30rpx;
  font-family: 微软雅黑;
}

.summary-title {
  padding: 0 0 20rpx;
  font-size: 26rpx;
  color: #7a7e83;
}