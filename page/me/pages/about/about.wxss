.about-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  box-sizing: border-box;
  background-color: #fff;
}

.ibookshelf-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}

.logo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.nickname, .version {
  font-family: 微软雅黑;
  color: #aaa;
}

.about-info {
  padding: 100rpx 5% 0;
  font-size: 30rpx;
}

.brief {
  font-family: 微软雅黑;
}
